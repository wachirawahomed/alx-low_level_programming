CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = /bin/rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Generate dependency files for each source file
DEP = $(SRC:.c=.d)

# Include dependency files
-include $(DEP)

# Rule to generate dependency files
%.d: %.c
	$(CC) -Wall -Werror -Wextra -pedantic -MM $< -MT $(@:.d=.o) > $@

.PHONY: all clean fclean oclean re

all: $(OBJ)
	$(CC) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ) $(DEP)

fclean: clean oclean

re: oclean all

m.h:
	@echo "Header file m.h is missing."; exit 1

