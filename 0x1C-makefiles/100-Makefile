# 6. make -f 100-Makefile

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f

.PHONY: all clean fclean oclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c -o $@ $<

clean:
	$(RM) $(NAME) $(SRC)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

